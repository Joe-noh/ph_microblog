<%= if !current_user?(@conn, @user) do %>
  <div id="follow_form">
    <%= if PhMicroblog.User.following?(@current_user, @user) do %>
      <%= render "unfollow.html", conn: @conn, user: @user %>
    <% else %>
      <%= render "follow.html", conn: @conn, user: @user %>
    <% end %>
  </div>
<% end %>

<h1>All users</h1>

<%= render "pager.html", conn: @conn, page: @page %>

<ul class="users">
  <%= for user <- @users do %>
    <li>
      <%= tag :img, src: gravatar_url(user, 50) %>
      <%= link user.name, to: user_path(@conn, :show, user) %>
    </li>
  <% end %>
</ul>

<%= render "pager.html", conn: @conn, page: @page %>
